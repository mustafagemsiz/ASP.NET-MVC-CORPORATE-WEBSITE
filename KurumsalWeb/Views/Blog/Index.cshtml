@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<a class="btn btn-primary" href="/Blog/Create/">Yeni Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>ResimURL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogId</td>
                <td>@item.Baslik</td>
                <td>@item.Kategori.KategoriAd</td>
                <td><img src="@item.ResimURL" width="%100" height="100"/></td>
                <td><a class="btn btn-warning" href="/Blog/Edit/@item.BlogId">Güncelle</a> <a class="btn btn-danger" href="/Blog/Delete/@item.BlogId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>

