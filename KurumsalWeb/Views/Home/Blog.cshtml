
@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Blog</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <article>
                        <div class="post-image">
                            <div class="post-heading">
                                <h3><a href="/Home/BlogDetay/@item.BlogId">@item.Baslik</a></h3>
                            </div>
                            <img src="@item.ResimURL" width="800" height="400" alt="@item.Baslik" />
                        </div>
                        <p>
                            @Html.Raw(item.Icerik.Substring(0, 100))...
                        </p>
                        <div class="bottom-article">
                            <ul class="meta-post">
                                <li><i class="icon-folder-open"></i>Kategori: @item.Kategori.KategoriAd</li>
                                @*<li><i class="icon-comments"></i><a href="#">4 Comments</a></li>*@
                            </ul>
                            <a href="/Home/BlogDetay/@item.BlogId" class="pull-right">Okumaya devam et <i class="icon-angle-right"></i></a>
                        </div>
                    </article>
                }
            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">

                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("BlogKategoriPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Son Blog Yazıları</h5>
                        @{
                            Html.RenderAction("BlogKayitPartial", "Home");
                        }
                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>

