<footer>
    <div class="container">
        <div class="row">

            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">
                        ‎Bizimle iletişime geçin‎
                    </h5>
                    <address class="fa fa-location-arrow">
                        @ViewBag.İletisim.Adres
                    </address>
                    <p>
                        <i class="fa fa-phone"></i>  @ViewBag.İletisim.Telefon <br>
                        <i class="fa fa-fax"></i>  @ViewBag.İletisim.Fax
                    </p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Menü</h5>
                    <ul class="link-list">
                        <li><a href="/Home/Index/">Anasayfa</a></li>
                        <li><a href="/Home/Hakkimizda/">Hakkımızda</a></li>
                        <li><a href="/Home/Hizmetler/">Hizmetler</a></li>
                        <li><a href="/Home/Blog/">Blog</a></li>
                        <li><a href="/Home/Iletisim/">İletişim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Son Blog Yazıları</h5>
                    <ul class="link-list">
                        @foreach (var item in ViewBag.Blog)
                        {
                            <li><a href="/Home/BlogDetay/@item.BlogId">@item.Baslik</a></li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="sub-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="copyright">
                        <p>&copy; Tüm Hakları Saklıdır.</p>
                        <div class="credits">

                            Designed by Birhat
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ul class="social-network">
                        <li><a style="color:white" target="_blank" href="https://www.facebook.com/@ViewBag.İletisim.Facebook" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                        <li><a style="color:white" target="_blank" href="https://api.whatsapp.com/send/?phone=@ViewBag.İletisim.Whatsapp" data-placement="top" title="Whatsapp"><i class="fa fa-whatsapp"></i></a></li>
                        <li><a style="color:white" target="_blank" href="https://www.twitter.com/@ViewBag.İletisim.Twitter" data-placement="top" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                        <li><a style="color:white" target="_blank" href="https://www.instagram.com/@ViewBag.İletisim.Instagram" data-placement="top" title="Twitter"><i class="fa fa-instagram"></i></a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
