
@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";

    ViewBag.Title = ViewBag.Bilgi.Title;
}
<!-- end header -->
<section id="featured">
    <!-- start slider -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Slider -->
                @{
                    Html.RenderAction("SliderPartial", "Home");
                }
                <!-- end slider -->
            </div>
        </div>
    </div>
</section>

<section id="content">
    <div class="container">
        <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="box">
                                <div class="box-gray aligncenter">
                                    <h4>Responsive Tasarım</h4>
                                    <div class="icon">
                                        <i class="fa fa-desktop fa-3x"></i>
                                    </div>
                                    <p>
                                       Tüm cihazlarla uyumlu Web ve Mobil Uygulama
                                    </p>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="box">
                                <div class="box-gray aligncenter">
                                    <h4>Modern Tasarım</h4>
                                    <div class="icon">
                                        <i class="fa fa-pagelines fa-3x"></i>
                                    </div>
                                    <p>
                                        En iyi UI/UX Kullanıcı arayüzü tasarımları
                                    </p>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="box">
                                <div class="box-gray aligncenter">
                                    <h4>Özelleştirilebilir</h4>
                                    <div class="icon">
                                        <i class="fa fa-edit fa-3x"></i>
                                    </div>
                                    <p>
                                      En iyi Müşteri ve Kullanıcı memnuniyeti
                                    </p>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="box">
                                <div class="box-gray aligncenter">
                                    <h4>Yazılım</h4>
                                    <div class="icon">
                                        <i class="fa fa-code fa-3x"></i>
                                    </div>
                                    <p>
                                        En hızlı ve En performans Kullanıcı deneyimi
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <!-- divider -->
        <div class="row">
            <div class="col-lg-12">
                <div class="solidline">
                </div>
            </div>
        </div>
        <!-- end divider -->
        <!-- Portfolio Projects -->
        <div class="row">
            @{
                Html.RenderAction("HizmetPartial", "Home");
            }
        </div>

    </div>
</section>
