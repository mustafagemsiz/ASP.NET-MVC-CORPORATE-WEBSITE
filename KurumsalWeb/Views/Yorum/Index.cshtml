@model IEnumerable<KurumsalWeb.Models.Model.Yorum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script>
    $(document).ready( function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            }
        );
} );
</script>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                Başlık
            </th>
            <th>
                Ad Soyad
            </th>
            <th>
                E-posta
            </th>
            <th>
                Yorum
            </th>
            <th>
                Onay
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Blog.Baslik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdSoyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eposta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Incerik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Onay)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.YorumId }, new { @class = "btn btn-warning" })
           
                    @Html.ActionLink("Sil", "Delete", new { id = item.YorumId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>


</table>
